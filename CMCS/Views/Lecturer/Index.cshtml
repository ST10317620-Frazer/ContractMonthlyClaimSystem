@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Lecturer Dashboard";
}
<div class="container mt-4">
    <h2 class="text-center mb-4">Lecturer Dashboard</h2>
    <form asp-action="SubmitClaim" asp-controller="Lecturer" method="get">
        <button type="submit" class="btn btn-primary mb-3 w-100">Submit New Claim</button>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Claim Name</th>
                <th>Submission Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.ClaimName</td>
                    <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                    <td><span class="badge bg-@(claim.Status == "Pending" ? "warning" : claim.Status == "Declined" ? "danger" : "success")">@claim.Status</span></td>
                    <td>
                        @if (string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <a asp-action="UploadDocument" asp-controller="Lecturer" asp-route-claimId="@claim.ClaimID" class="btn btn-info btn-sm">Upload Document</a>
                        }
                        else
                        {
                            <a href="@claim.DocumentPath" target="_blank" class="btn btn-secondary btn-sm">View Document</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">