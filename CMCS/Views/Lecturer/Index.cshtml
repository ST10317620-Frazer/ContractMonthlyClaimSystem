@model IEnumerable<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Lecturer Dashboard";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lecturer Dashboard</h2>
        <form asp-action="Logout" asp-controller="Account" method="post">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </div>
    <button class="btn btn-primary mb-3" asp-action="SubmitClaim" asp-controller="Lecturer">Submit New Claim</button>
    <button class="btn btn-secondary mb-3" asp-action="UploadDocument" asp-controller="Lecturer">Upload Documents</button>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Claim Name</th>
                <th>Submission Date</th>
                <th>Hours Worked</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.ClaimName</td>
                    <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.TotalAmount</td>
                    <td>
                        <span class="badge" style="background-color: @(claim.Status == "Approved" ? "#28a745" : claim.Status == "Pending" ? "#ffc107" : "#dc3545"); color: white;">
                            @claim.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">