@model CMCS.Models.Claim
@{
    ViewData["Title"] = "Submit New Claim";
}
<div class="container mt-4">
    <h2 class="text-center mb-4">Submit New Claim</h2>
    <div class="card p-4 shadow-sm">
        <form asp-action="SubmitClaim" asp-controller="Lecturer" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="ClaimName" class="form-label">Claim Name</label>
                <input asp-for="ClaimName" class="form-control" />
                <span asp-validation-for="ClaimName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SubmissionDate" class="form-label">Submission Date</label>
                <input asp-for="SubmissionDate" type="date" class="form-control" value="@Model.SubmissionDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="SubmissionDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
                <input asp-for="HoursWorked" type="number" min="1" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HourlyRate" class="form-label">Hourly Rate (R)</label>
                <input asp-for="HourlyRate" type="number" step="0.01" min="0" class="form-control" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Additional Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DocumentPath" class="form-label">Upload Document</label>
                <input type="file" name="file" class="form-control" />
                <small class="text-muted">Max 10MB. Allowed: .pdf, .docx, .xlsx</small>
                @if (!string.IsNullOrEmpty(Model.DocumentPath))
                {
                    <p>Uploaded: @Model.DocumentPath</p>
                }
                <span asp-validation-for="DocumentPath" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
                }
            </div>
            <button type="submit" class="btn btn-success btn-lg w-100 mb-3">Submit Claim</button>
            <a asp-action="Index" asp-controller="Lecturer" class="btn btn-secondary w-100">Cancel</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">