@model CMCS.Models.Claim
@{
    ViewData["Title"] = "Admin – Claim Details";
}

<div class="container mt-4">
    <h2 class="text-danger">ADMIN REVIEW – Claim #@Model.Id</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Lecturer</dt>
                <dd class="col-sm-8">@Model.Lecturer?.FullName (@Model.Lecturer?.Email)</dd>

                <dt class="col-sm-4">Hours Worked</dt>
                <dd class="col-sm-8">@Model.HoursWorked hours</dd>

                <dt class="col-sm-4">Hourly Rate</dt>
                <dd class="col-sm-8">R @Model.HourlyRate</dd>

                <dt class="col-sm-4">Total Claim</dt>
                <dd class="col-sm-8 fw-bold text-success fs-5">R @(Model.HoursWorked * Model.HourlyRate)</dd>

                <dt class="col-sm-sm-4">Submitted</dt>
                <dd class="col-sm-8">@Model.SubmittedDate:dd MMMM yyyy HH:mm</dd>
            </dl>
        </div>
    </div>

    <h4 class="mt-4">Supporting Documents</h4>
    @if (Model.Documents.Any())
    {
        <div class="list-group">
            @foreach (var doc in Model.Documents)
            {
                <a href="/uploads/@doc.StoredFileName" download class="list-group-item list-group-item-action">
                    <strong>@doc.OriginalFileName</strong>
                </a>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No documents attached.</p>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>