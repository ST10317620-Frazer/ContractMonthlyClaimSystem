@model IEnumerable<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container mt-4">
    <h2>Admin Dashboard</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Claim Name</th>
                <th>Submission Date</th>
                <th>Hours Worked</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.ClaimName</td>
                    <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.TotalAmount</td>
                    <td><span class="badge bg-@(claim.Status == "Pending" ? "warning" : claim.Status == "Declined" ? "danger" : "success")">@claim.Status</span></td>
                    <td><a asp-action="ClaimDetails" asp-controller="Admin" asp-route-id="@claim.ClaimID" class="btn btn-sm btn-primary">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">