@model IEnumerable<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Admin – Pending Claims";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger fw-bold">ADMIN DASHBOARD – PENDING CLAIMS</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">No pending claims right now.</div>
    }
    else
    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Lecturer</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total</th>
                    <th>Date</th>
                    <th>Files</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td><strong>@c.Lecturer?.FullName</strong></td>
                        <td>@c.HoursWorked h</td>
                        <td>R @c.HourlyRate</td>
                        <td class="fw-bold text-success">R @(c.HoursWorked * c.HourlyRate)</td>
                        <td>@c.SubmittedDate:dd MMM yyyy</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-primary">
                                View (@c.Documents.Count)
                            </a>
                        </td>
                        <td class="text-center">
                            <form asp-action="Approve" asp-route-id="@c.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <button type="button" class="btn btn-danger btn-sm ms-1" data-bs-toggle="modal" data-bs-target="#reject-@c.Id">
                                Reject
                            </button>

                            <!-- Reject Modal -->
                            <div class="modal fade" id="reject-@c.Id">
                                <div class="modal-dialog">
                                    <form asp-action="Reject" asp-route-id="@c.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5>Reject Claim</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <textarea name="rejectionReason" class="form-control" rows="4" placeholder="Reason for rejection..." required></textarea>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reject Claim</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>