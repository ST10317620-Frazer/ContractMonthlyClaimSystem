@model CMCS.Models.Claim?
@{
    ViewData["Title"] = "Claim Details";
}
<div class="container mt-4">
    <h2>Claim Details</h2>
    @if (Model != null)
    {
        <div class="card">
            <div class="card-body">
                <p><strong>Claim ID:</strong> @Model.ClaimID</p>
                <p><strong>Claim Name:</strong> @Model.ClaimName</p>
                <p><strong>Submission Date:</strong> @Model.SubmissionDate.ToString("yyyy-MM-dd")</p>
                <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
                <p><strong>Total Amount:</strong> @Model.TotalAmount</p>
                <p><strong>Status:</strong> <span class="badge bg-@(Model.Status == "Pending" ? "warning" : Model.Status == "Declined" ? "danger" : "success")">@Model.Status</span></p>
                <p><strong>Date Processed:</strong> @(Model.DateProcessed.HasValue ? Model.DateProcessed.Value.ToString("yyyy-MM-dd HH:mm:ss") : "Not processed")</p>
                @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
                @if (Model.Status == "Pending")
                {
                    <form asp-action="ApproveClaim" asp-controller="Admin" method="post">
                        <input type="hidden" name="id" value="@Model.ClaimID" />
                        <button type="submit" class="btn btn-success me-2">Approve Claim</button>
                    </form>
                    <form asp-action="DeclineClaim" asp-controller="Admin" method="post">
                        <input type="hidden" name="id" value="@Model.ClaimID" />
                        <button type="submit" class="btn btn-danger">Reject Claim</button>
                    </form>
                }
            </div>
        </div>
    }
    else
    {
        <p>Claim not found.</p>
    }
    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary mt-3">Back to List</a>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">