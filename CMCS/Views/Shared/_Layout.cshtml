<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Lecturer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Claims" asp-action="Submit">Submit Claim</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Claims" asp-action="MyClaims">My Claims</a>
                                </li>
                            }

                            @if (User.IsInRole("Coordinator") || User.IsInRole("AcademicManager") || User.IsInRole("HR"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Coordinator" asp-action="PendingClaims">
                                        Pending Claims
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 mt-5 bg-light">
        <div class="container text-center">
            &copy; 2025 Contract Monthly Claim System • Paris Frazer
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>