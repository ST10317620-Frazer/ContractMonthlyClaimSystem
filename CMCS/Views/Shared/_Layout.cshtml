<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CMCS</title>

    <!-- Aesthetic fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Inter', sans-serif;
            color: #2d3748;
        }
        h1, h2, h3, h4, .navbar-brand { font-family: 'Playfair Display', serif; letter-spacing: 0.5px; }

        main { flex: 1; }

        /* Deep blue gradient navbar – same as your original */
        .navbar-gradient {
            background: linear-gradient(90deg, #1e3a8a, #1e40af, #3b82f6);
            box-shadow: 0 8px 25px rgba(30, 58, 138, 0.3);
        }
        .nav-link {
            font-weight: 500;
            transition: all 0.3s;
        }
        .nav-link:hover { color: #dbeafe !important; transform: translateY(-1px); }

        /* Cards & buttons */
        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.12);
            overflow: hidden;
        }
        .btn-gradient {
            background: linear-gradient(45deg, #2563eb, #1d4ed8);
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s;
        }
        .btn-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(37, 99, 235, 0.4);
        }

        /* Footer – deep blue, always at bottom */
        .footer {
            background: linear-gradient(90deg, #1e3a8a, #1e40af);
            color: #e0e7ff;
            padding: 2rem 0;
            margin-top: auto;
        }
        .footer span { color: #93c5fd; font-weight: 600; }
    </style>
</head>
<body>

    <!-- Clean blue gradient navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient">
        <div class="container-fluid">
            <a class="navbar-brand fs-2 fw-bold" href="/">CMCS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto gap-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item"><span class="navbar-text">Hello, @User.Identity.Name</span></li>
                        if (User.IsInRole("Lecturer"))
                        {
                            <li><a class="nav-link" asp-controller="Claims" asp-action="MyClaims">My Claims</a></li>
                            <li><a class="nav-link" asp-controller="Claims" asp-action="Submit">Submit Claim</a></li>
                        }
                        if (User.IsInRole("Coordinator") || User.IsInRole("AcademicManager") || User.IsInRole("HR"))
                        {
                            <li><a class="nav-link" asp-controller="Admin" asp-action="Index">Pending Claims</a></li>
                        }
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main>
        <div class="container py-5">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-4 shadow-sm">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </div>
    </main>

    <!-- Sticky footer – always at bottom -->
    <footer class="footer">
        <div class="container text-center">
            <p class="mb-0">
                © 2025 Contract Monthly Claim System • Developed by <span>Paris Frazer</span>
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>