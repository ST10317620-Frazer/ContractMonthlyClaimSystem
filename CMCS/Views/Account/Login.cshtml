@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center min-vh-100 py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card">
                    <div class="card-header text-white text-center py-5" style="background: linear-gradient(45deg, #1e40af, #1d4ed8);">
                        <h2 class="mb-0 fw-bold" style="text-shadow: 0 2px 8px rgba(0,0,0,0.4);">
                            CMCS Login
                        </h2>
                    </div>
                    <div class="card-body p-5">
                        <form asp-action="Login" asp-controller="Account" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Email Address</label>
                                <input name="email" type="email" class="form-control form-control-lg rounded-pill"
                                       placeholder="lecturer@test.com" required autofocus />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Password</label>
                                <input name="password" type="password" class="form-control form-control-lg rounded-pill"
                                       placeholder="••••••••" required />
                            </div>

                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger rounded-4 mb-4">
                                    Invalid email or password.
                                </div>
                            }

                            <button type="submit" class="btn btn-gradient text-white w-100 py-3 rounded-pill">
                                Login to Dashboard
                            </button>
                        </form>

                        <div class="mt-5 text-center bg-light p-4 rounded-4">
                            <p class="mb-2 fw-semibold text-muted">Test Accounts</p>
                            <p class="mb-1">Lecturer: <code>lecturer@test.com</code> / Pass@123</p>
                            <p class="mb-0">Admin: <code>coordinator@test.com</code> / Pass@123</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>