@* Views/Account/Login.cshtml *@
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0">CMCS Login</h3>
                </div>
                <div class="card-body p-5">

                    <form asp-action="Login" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label class="form-label fw-bold">Email</label>
                            <input name="email" type="email" class="form-control form-control-lg" 
                                   placeholder="e.g. lecturer@test.com" required autofocus />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Password</label>
                            <input name="password" type="password" class="form-control form-control-lg" 
                                   placeholder="Pass@123" required />
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                Invalid email or password.
                            </div>
                        }

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            Login
                        </button>
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="mb-2 text-muted"><strong>Test Accounts:</strong></p>
                        <p class="small mb-1">
                            Lecturer → <code>lecturer@test.com</code> / Pass@123
                        </p>
                        <p class="small">
                            Admin → <code>coordinator@test.com</code> / Pass@123
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">